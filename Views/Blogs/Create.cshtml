@model Blog_Engine.Models.Blog

@{
    ViewData["Title"] = "Create";
}

<h1 class="create-header">“Write, Share, Inspire”</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" placeholder="Title" maxlength="50"/>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Content" class="control-label"></label>
                <textarea asp-for="Content" class="form-control" placeholder="Content" rows="5" cols="33"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Author" class="control-label"></label>
                <input asp-for="Author" class="form-control" placeholder="Author" maxlength="50" />
                <span asp-validation-for="Author" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" type ="date"class="form-control" placeholder="mm/dd/yyyy" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div><br />
            <div class="form-group">
                <input type="submit" value="Create" class="create-btn" />
            </div>
          
        </form>
    </div>
    <div>
       <br/> <a asp-action="Index" class="back"><box-icon name='left-arrow-alt' class="back-icon"></box-icon></a>
    </div>

</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
